# ------------------------------------------------------------
# Ignore node modules (re-installed inside image)
# ------------------------------------------------------------
node_modules/
**/node_modules/

# ------------------------------------------------------------
# Ignore Git metadata
# ------------------------------------------------------------
.git/
.gitignore
.gitattributes

# ------------------------------------------------------------
# Environment files (never copy secrets into container)
# ------------------------------------------------------------
.env
.env.*
!.env.example

# ------------------------------------------------------------
# Ignore system-level junk
# ------------------------------------------------------------
.DS_Store
Thumbs.db
Desktop.ini

# ------------------------------------------------------------
# Ignore local runtime data
# These belong to the host, not the container.
# ------------------------------------------------------------
runtime/
!runtime/.gitkeep

# ------------------------------------------------------------
# Ignore media content (mounted into container via volumes)
# ------------------------------------------------------------
media/
!media/.gitkeep
!media/photos/.gitkeep
!media/videos/.gitkeep
!media/movies/.gitkeep
!media/tv/.gitkeep

# ------------------------------------------------------------
# Ignore large local cache / temp directories
# ------------------------------------------------------------
.cache/
.parcel-cache/
tmp/
temp/

# ------------------------------------------------------------
# Ignore logs
# ------------------------------------------------------------
logs/
*.log

# ------------------------------------------------------------
# Ignore Docker output
# ------------------------------------------------------------
docker-data/
docker-compose.override.yml

# ------------------------------------------------------------
# Ignore compiled output if any future build steps added
# ------------------------------------------------------------
dist/
build/

# ------------------------------------------------------------
# Ignore editor settings
# ------------------------------------------------------------
.vscode/
.idea/
